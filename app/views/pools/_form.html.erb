<%= form_with(model: @pool, local: true) do |form| %>
  <% if @pool.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pool.errors.count, "error") %> prohibited this pool from being saved:</h2>
      <ul>
        <% @pool.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :matches %><br>
    <%= form.collection_check_boxes(:match_ids, @matches, :id, :display_name) %>
  </div>

  <div class="actions">
    <%= form.submit "Create Pool" %>
  </div>
<% end %>