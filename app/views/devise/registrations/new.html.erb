<div class="auth-container">
  <h2>Registro</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post, enctype: "multipart/form-data" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label "Email:" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label "Nombre de usuario:" %><br />
      <%= f.text_field :username %>
    </div>

    <div class="field">
      <%= f.label "Nombre:" %><br />
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label "Apellido" %><br />
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label "Teléfono:" %><br />
      <%= f.telephone_field :phone %>
    </div>

    <div class="field">
      <%= f.label "Selecciona tu foto de perfil" %><br />
      <%= f.file_field :profile_picture %>
    </div>

    <div class="field">
      <%= f.label "Contraseña" %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label "Confirma tu contraseña:" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Guardar" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
